<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/poppins</item>

    </style>
    <style name="Toolbar.UnderLine" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ToolbarUnderlines" parent="Widget.AppCompat.Toolbar.Button.Navigation">

        <item name="android:background">@drawable/line_back</item>
    </style>
    
    <style name="TextTabSoal" parent="TextAppearance.AppCompat">
        <item name="tabBackground">@drawable/selector_tab_soal</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="fontFamily">@font/poppins</item>

    </style>

    <style name="TextTabSoalAnswered" parent="TextAppearance.AppCompat">
        <item name="titleTextColor">@android:color/holo_red_dark</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="RoundedButton">
        <item name="background">@drawable/rounded_btn_start</item>
        <item name="android:radius">50dp</item>

    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/birutua_cal_c</item>
        <item name="tabIndicatorColor">@color/birutua_cal_c</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

</resources>
